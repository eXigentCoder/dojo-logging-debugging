{
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": false,
                "omit_norms": true
            },
            "_source": {
                "enabled": true
            },
            "_ttl": {
                "enabled": true,
                "default": "900d"
            },
            "properties": {
                "@timestamp": {
                    "type": "date",
                    "index": "not_analyzed"
                },
                "@version": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "message": {
                    "type": "string",
                    "index": "analyzed"
                },
                "severity": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "fields": {
                    "type": "object",
                    "dynamic": true
                }
            }
        }
    }
}
