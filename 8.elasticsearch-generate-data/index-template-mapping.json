{
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": false,
                "omit_norms": true
            },
            "_source": {
                "enabled": true
            },
            "_ttl": {
                "enabled": true,
                "default": "900d"
            },
            "properties": {
                "@timestamp": {
                    "type": "date",
                    "index": "not_analyzed"
                },
                "@version": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "severity": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "ipAddress": {
                    "type": "ip"
                },
                "userAgent": {
                    "type": "string"
                },
                "location": {
                    "type": "geo_point"
                },
                "verb": {
                    "type": "keyword"
                },
                "path": {
                    "type": "string"
                },
                "size": {
                    "type": "integer"
                },
                "status": {
                    "type": "keyword"
                }
            }
        }
    }
}
